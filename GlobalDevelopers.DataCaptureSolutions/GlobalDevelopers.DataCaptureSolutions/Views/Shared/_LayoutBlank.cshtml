<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - Data Capture Solutions</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/thirdpartycss")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img height="50" width="150" src="~/Content/Images/data-capture-solutions.png" alt="Data Capture Solutions Ltd">
                </a>

                @*<img alt="Data Capture Solutions Ltd" src="~/Content/Images/data-capture-solutions.png" />*@
                @*@Html.ActionLink("Data Capture Solutions", "Index", "Home", new { area = "" }, new { @class = "navbar-brand hidden-sm hidden-md hidden-lg" })*@
            </div>
            <!-- Top Menu Items -->
            
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            
            <!-- /.navbar-collapse -->
        </nav>
        <div id="page-wrapper">
            <div class="container-fluid">
                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">

                        @RenderBody()
                        
                        <hr />
                        <footer>
                            <p>&copy; @DateTime.Now.Year - Global Developers Limited</p>
                        </footer>
                    </div>
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/thirdpartyscripts")
    @RenderSection("scripts", required: false)



</body>
</html>

